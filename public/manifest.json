{
  "manifest_version": 3,
  "name": "tv2-dk-translator",
  "version": "1.0",
  "description": "",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://play.tv2.dk/*",
    "http://play.tv2.dk/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content.js"],
      "css": ["assets/content.css"],
      "run_at": "document_end",
      "type": "module "
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/content.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
